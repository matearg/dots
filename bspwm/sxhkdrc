# web browser
super + {_,shift + }w
    firefox

# terminal emulator
super + Return
    kitty

# file manager
super + shift + f
    pcmanfm

# program launcher
super + {_,shift + }p
    ~/.config/rofi/launchers/type-4/launcher.sh

super + {_,shift + }d
    dmenu_run -i -nb '#1e1e2e' -nf '#f5c2e7' -sb '#f5c2e7' -sf '#1e1e2e' -fn 'JetBrainsMono Nerd Font Propo:pixelsize=20'

# make sxhkd reload its configuration files:
super + ESC
    pkill -USR1 -x sxhkd

# Restart bspwm
control + shift + r
    bspc wm -r

# quit bspwm normally
super + x
    ~/.config/rofi/powermenu/type-2/powermenu.sh

# close and kill
super + {_,shift + }c
    bspc node -{c,k}

#
# state/flags
#

# set the window state
super + @space
    bspc node -t {tiled,floating}

# alternate between the tiled and monocle layout
super +  m
    bspc desktop -l next

# alternate between the tiled and fullscreen layout
super + f
    bspc node -t {tiled,fullscreen}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the next/previous node in the current desktop
super + {_,shift + }q
    bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + ctrl + {Left,Right}
    bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
    bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {Left,Down,Up,Right}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

# volume control keys
XF86AudioMute
    pamixer -t
XF86AudioRaiseVolume
    pamixer -i 2
XF86AudioLowerVolume
    pamixer -d 2
# XF86MonBrightnessUp
#     xbacklight +10
# XF86MonBrightnessDown
#     xbacklight -10
